<p id="notice"><%= notice %></p>
<%= current_user.email %>
<h1>Listing Libraries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Created by</th>
      <th>Ref</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.name %></td>
        <td><%= library.description %></td>
        <td><%= library.created_by %></td>
        <td><%= library.ref_id %></td>
        <td><%= link_to 'Show', library %></td>
        <td><%= link_to 'Edit', edit_library_path(library) %></td>
        <td><%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Library', new_library_path %>


<% if @errors %>
  <% @errors.each do |message| %>
    <%= message %>
  <% end %>
<% end %>



<%= form_tag import_csv_libraries_path, :multipart => true do %>

  <%= file_field_tag :file %>
  <% hidden_field_tag :user_id => current_user.id %>
  <%= submit_tag 'submit'%>
<% end %>